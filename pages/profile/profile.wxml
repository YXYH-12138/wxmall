<view class="profile">
  <view class='header'>
    <view class='avatar'>
      <image src="/assets/images/profile/avatar.png" />
    </view>
    <view class='login-info'>
      <view class='login'>登录/注册</view>
      <view class='phone'>
        <image src="/assets/images/profile/phone.png" />
        暂无绑定手机号
      </view>
    </view>
    <view class='arrow'>
      <image src="/assets/images/common/arrow-right.png" />
    </view>
  </view>
  <view class='info'>
    <view class='info-money info-item'>
      <view>
        <text class='count'>0.00</text>
        <text>元</text>
      </view>
      <view>我的余额</view>
    </view>
    <view class='info-discount info-item'>
      <view>
        <text class='count'>0</text>
        <text>个</text>
      </view>
      <view>我的优惠</view>
    </view>
    <view class='info-pointer info-item'>
      <view>
        <text class='count'>0</text>
        <text>分</text>
      </view>
      <view>我的积分</view>
    </view>
  </view>
  <hw-list-view infos="{{orderList}}" />
  <hw-list-view infos="{{serviceList}}" />
</view>