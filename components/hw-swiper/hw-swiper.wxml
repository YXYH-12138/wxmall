<swiper autoplay circular indicator-dots indicator-active-color="#ff5777" class='swiper' indicator-color="rgba(255, 255, 255, .5)">
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item>
      <image class="swiper-image" src="{{item.image || item}}" mode='widthFix' />
    </swiper-item>
  </block>
</swiper>